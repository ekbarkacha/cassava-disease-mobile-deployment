<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CassavaCare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorSecondary">@color/secondary_brown</item>
        <item name="android:windowBackground">@color/neutral_gray</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="cardBackgroundColor">@color/neutral_gray</item>
    </style>

    <style name="Theme.CassavaCare.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:background">@color/card</item>
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
    </style>

    <style name="DialogShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>